<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/viewCircle1"
        android:layout_width="@dimen/_32dp"
        android:layout_height="@dimen/_32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_36dp"
        android:layout_marginTop="@dimen/_21dp"
        android:background="@drawable/circle_bg" />

    <View
        android:id="@+id/viewName1"
        android:layout_width="@dimen/_100dp"
        android:layout_height="@dimen/_8dp"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_21dp"
        android:layout_toEndOf="@+id/viewCircle1"
        android:background="@drawable/curved_corner_bg" />

    <View
        android:id="@+id/viewTitle1"
        android:layout_width="@dimen/_260dp"
        android:layout_height="@dimen/_8dp"
        android:layout_below="@+id/viewName1"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_36dp"
        android:layout_toEndOf="@+id/viewCircle1"
        android:background="@drawable/curved_corner_bg" />

    <View
        android:id="@+id/viewDivider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/viewTitle1"
        android:layout_marginTop="@dimen/_21dp"
        android:background="@color/textSecondaryGray" />
</RelativeLayout>